# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/notemaster"
# Or for SQLite (development):
# DATABASE_URL="file:./prisma/dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# App Configuration
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (Optional - for share links and invitations)
# Free SMTP options:
# - Gmail: smtp.gmail.com:587 (use App Password)
# - SendGrid: smtp.sendgrid.net:587 (100 emails/day free)
# - Mailgun: smtp.mailgun.org:587 (5000 emails/month free)
# - Brevo/Sendinblue: smtp-relay.brevo.com:587 (300 emails/day free)

EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
